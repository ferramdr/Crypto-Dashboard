[mysqld]
# Configuración del servidor MySQL Master
# Server ID único para el maestro
server-id = 1

# Habilitar binary logging para replicación
log_bin = /var/log/mysql/mysql-bin.log

# Nombre de la base de datos a replicar (opcional, puede replicar todas)
binlog_do_db = crypto_db

# Formato del binary log (ROW es más seguro para replicación)
binlog_format = ROW

# Tiempo de retención de los logs binarios (en días)
expire_logs_days = 10

# Tamaño máximo de los archivos de log binario
max_binlog_size = 100M

# Configuraciones de rendimiento
max_connections = 200
