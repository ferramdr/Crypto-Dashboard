[mysqld]
# Configuración del servidor MySQL Slave
# Server ID único para el esclavo
server-id = 2

# Habilitar relay log para recibir actualizaciones del maestro
relay-log = /var/log/mysql/mysql-relay-bin.log

# Registrar las actualizaciones del esclavo en su propio binary log
# (útil si este esclavo se convierte en maestro en el futuro)
log_bin = /var/log/mysql/mysql-bin.log

# Solo lectura (opcional, descomenta si quieres que el esclavo sea read-only)
# read_only = 1

# Configuraciones de rendimiento
max_connections = 200
